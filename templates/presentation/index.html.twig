{% extends 'base.html.twig' %}


{% block title %}Gestion des Presentations{% endblock %}

{% block body %}





    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <nav class="navbar navbar-light bg-light">


                    </nav>




                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Liste des présentations</li>

                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
    <div class="container-fluid">
    <div class="row">
    <div class="col-12">
    <div class="card">

    <!-- /.card-header -->
    <div class="card-body">
        <a class="btn btn-success" href="{{ path('addPres') }}">Créer une nouvelle présentation</a>
        <br><br>
        <table id="example2" class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Description de société</th>
                <th>Image</th>
                <th>Action</th>


            </tr>
            </thead>
            {% for a in pres %}
                <tbody>
                <tr>
                    <td>{{ a.titre }}</td>
                    <td>{{ a.text }}</td>
                    <td><video width="320" height="240" autoplay muted>
                            <source src="{{asset('/adminAssets/img/')~ a.photo  }}" type="video/mp4">
                        </video></td>





                    <td><a href="{{ path('modifPres', {'id': a.id}) }}" class="btn btn-outline-warning">Modifier</a>
                        <a href="{{ path('suppPres', {'id': a.id}) }}" class="btn btn-outline-danger">Supprimer</a>



                </tr>

                </tbody>
            {% endfor %}
        </table>


    </div>



