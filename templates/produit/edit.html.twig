{% extends 'base.html.twig' %}
    {% block body %}
    
    <div style="position : absolute;margin-left:17%;width:83%; height: auto;">  <!-- jquery validation -->
        <!-- jquery validation -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Modifier un produit</h3>
                    {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                </div>
                <!-- /.card-header -->
                <!-- form start -->
             <form id="quickForm" novalidate="novalidate">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">référence</label>
                    {{ form_widget(form.ref,{'attr':{'class':'form-control'}}) }}

                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Nom de produit</label>
                    {{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}
                  
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Prix</label>
                    {{ form_widget(form.prix,{'attr':{'class':'form-control'}}) }}
                  
                </div>

                   <div class="form-group">
                    <label for="exampleInputPassword1">Description</label>
                    {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}

                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">fiche</label>
                    {{ form_widget(form.fiche,{'attr':{'class':'form-control'}}) }}

                </div>

                   <div class="form-group">
                    <label for="exampleInputPassword1">Photo</label>
                    {{ form_widget(form.photo,{'attr':{'class':'form-control'}}) }}
                  
                </div>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                {{ form_widget(form.Valider,{'attr':{'class':'btn btn-warning'}}) }}
                 <input class="btn btn-secondary" type = "button" value = "Retour!"  onclick = "history.back()">
            </div>
            {{ form_end(form) }}
        </form>
            </div>
            <!-- /.card -->
        </div>
