{% extends 'base.html.twig' %}
    {% block body %}
    
    <div style="position : absolute;margin-left:17%;width:83%; height: auto;">  <!-- jquery validation -->
        <!-- jquery validation -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Modifier une actualit√©</h3>
                    {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                </div>
                <!-- /.card-header -->
                <!-- form start -->
           <form id="quickForm" novalidate="novalidate">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Titre de l'article</label>
                            {{ form_widget(form.titre,{'attr':{'class':'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Description de l'article</label>
                            {{ form_widget(form.text,{'attr':{'class':'form-control'}}) }}
                        </div>

                        <label for="inputText" class="col-sm-4 col-form-label">Photo</label>
                        <div class="col-sm-6">
                            {{ form_widget(form.photo,{'attr':{'class':'form-control'}}) }}


                        </div>

                    </div>

                    <div class="card-footer">
                        {{ form_widget(form.Valider,{'attr':{'class':'btn btn-warning'}}) }}
                         <input class="btn btn-secondary" type = "button" value = "Retour!"  onclick = "history.back()">
                    </div>
                    {{ form_end(form) }}
                </form>
            </div>
            <!-- /.card -->
        </div>
    {% endblock %}